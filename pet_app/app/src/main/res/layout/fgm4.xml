<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:src="@drawable/img4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv4"
            android:text="닭가슴살 테린"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn4"
            android:text="뒤로가기"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="재료 : 닭가슴살, 단호박, 당근"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 물에 식초 2큰술 넣고 닭가슴살을 넣어둔다."
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. 단호박과 당근은 잘게 다져준다."
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. 닭가슴살을 흐르는 물에 깨끗이 씻어준 뒤 믹서에 갈아준다."
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. 닭가슴살과 다진 채소들을 틀에 넣고 오븐에 50분 구워주면 끝!"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>